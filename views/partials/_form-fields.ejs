<!-- Article Form -->
<!-- Title Input -->
<div class="form-groups mb-3">
    <label for="title">Title</label>
    <input type="text" name="title" id="title" class="form-control" value="<%= article.title %> " required>
</div>
<!-- Writer Input -->
<div class="form-groups mb-3">
    <label for="writer">Writer</label>
    <input type="text" name="writer" id="writer" class="form-control" value="<%= article.writer %> " required>
</div>
<!-- Description Input -->
<div class="form-groups mb-3">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
</div>
<!-- Markdown Input -->
<div class="form-groups mb-3">
    <label for="markdown">Markdown</label>
    <textarea name="markdown" id="markdown" class="form-control" required><%= article.markdown %></textarea>
</div>

<button type="submit" class="btn btn-primary mb-5">Save</button>
<a href="/articles" class="btn btn-secondary mb-5">Cancel</a>